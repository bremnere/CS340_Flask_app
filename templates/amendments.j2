</head>
<body>
    <nav>
        <H1>Backyard Blooms</H1>
        <p><strong>View/Add/Delete Soil Amendments in Backyard Blooms</strong></p>
        <ul>
            <li><a href="home">Home</a></li>  
            <li><a href="plants">Plants</a></li> 
            <li><a href="species">Species</a></li> 
            <li><a href="harvests">Harvests</a></li> 
            <li><a href="gardenbeds">Garden Beds</a></li> 
            <li><a href="amendments">Amendments</a></li> 
            <li><a href="gardenbedamendments">Garden Bed Amendments</a></li> 
        </ul>
    </nav>

 <!-- Citation # 6 - FLASK STARTER CODE - APPLYING QUERIES TO APP -->
<!-- Citation # 7 - Jinja 2 Templates -->

<table>
    <thead>
    <tr>
        <!-- Header Names -->
        {% for key in Amendments[0].keys() %}

        <!-- Header Row -->
        <th>{{ key }}</th>

        <!-- End of this for loop -->
        {% endfor %}
    </tr>
    <tbody>

    <!-- Go through every amendment in Amendments -->
    {% for amendment in Amendments %}
    <tr>
        <!-- Then iterate through every key in the current amendment dictionary -->
        {% for key in amendment.keys() %}

        <!-- Create a element with amendment -->
        <td>{{amendment[key]}}</td>
        {% endfor %}

        <!-- Delete Button-->
        <td><a href="update_amendment/{{amendment.amendment_id}}">Update</a></td>
        <td><a href="delete_amendment/{{amendment.amendment_id}}">Delete</a></td>
    </tr>
    {% endfor %}
</table>

     <!-- Form creation for add/update (see citation 3/4) --> 
    <form action="/amendments" method="POST" name = addamendment> 
        <legend>Add Amendment</legend>
        <fieldset>
            <label for="">Amendment Type</label>
            <input type="text" id="atype" name="atype">
            <label for="">Amendment Quantity</label>
            <input type="text" id="aquantity" name="aquantity" placeholder="pounds">
            <label for="">Date Applied</label>
            <input type="date" id="adateapplied" name="adateapplied">
            <button name="add_amendment" value="add_amendment">Submit</button>
        </fieldset>
    </form>

         <!-- Form creation for add/update (see citation 3/4) --> 
    <form action="/update_amendment" method="POST" name = updateamendment> 
        <legend>Update Amendment</legend>
        <fieldset>
            <label for="updatedamendmentid">Amendment ID</label>
            <select name="updatedamendmentid" id="updatedamendmentid">
                <option value="">Select</option>
                {% for amendment in Amendments %}
                    <option value="{{ amendment.amendment_id }}">{{ amendment.amendment_id }}</option>
                {% endfor %}
            </select>
            <label for="updateatype">Amendment Type</label>
            <input type="text" id="updateatype" name="updateatype">
            <label for="updateaquantity">Amendment Quantity</label>
            <input type="text" id="updateaquantity" name="updateaquantity" placeholder="pounds">
            <label for="updateadateapplied">Date Applied</label>
            <input type="date" id="updateadateapplied" name="updateadateapplied">
            <button type="submit" name="update_amendment" value="update_amendment">Submit</button>
        </fieldset>
    </form>
</body>
</html>